@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<ToDoList_GERNALE.Models.ToDoItem>

@{
    ViewData["Title"] = "To-Do List_GERNALE";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="text-right mb-3">
    <a class="btn btn-primary" asp-action="Create">Create New To-Do</a>
</div>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
